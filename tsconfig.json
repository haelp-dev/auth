{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}